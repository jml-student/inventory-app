<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Crypto Vault</title>
  </head>
  <body>
    <h1>Welcome to Crypto Vault</h1>
    <p>Register</p>
    <% if (errors.length > 0) { %>
      <p>
        <% errors.forEach((error) => { %>
          <li><%= error.msg %></li>
        <% }) %>
      </p>
    <% } %>
    <form action="/register" method="post">
      <label for="username">Username:</label>
      <input type="text" id="username" value="<%= data.username %>" name="username" required />
      <label for="password">Password:</label>
      <input type="password" id="password" value="<%= data.password %>" name="password" required />
      <label for="password2">Confirm Password:</label>
      <input type="password" id="password2" value="<%= data.password2 %>" name="password2" required />
      <button type="submit">Submit</button>
    </form>
    <p>Already have an account? <a href="/">Login</a></p>
  </body>
</html>
